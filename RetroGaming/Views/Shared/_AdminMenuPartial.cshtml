@using Microsoft.AspNetCore.Identity;
@using RetroGaming.Areas.Identity.Data;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if(SignInManager.IsSignedIn(User) && await UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "admin"))
{
  <li class="nav-item dropdown show">
    <a class="dropdown-toggle nav-link" href="#" data-bs-toggle="dropdown">Admin</a>
    <div class="dropdown-menu">
      <a class="dropdown-item" asp-area="Admin" asp-controller="Categories" asp-action="Index">Categories</a>
      <a class="dropdown-item" asp-area="Admin" asp-controller="Products" asp-action="Index">Products</a>
    </div>
  </li>
}