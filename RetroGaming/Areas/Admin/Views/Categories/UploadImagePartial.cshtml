@model RetroGaming.Areas.Admin.Models.ImageFileModel;

<div>
  @using (Html.BeginForm("SavePicture", "Categories", FormMethod.Post, new { enctype = "multipart/form-data" }))
  {
    @Html.AntiForgeryToken()

    <div class="form-group">
      <div>
        @Html.LabelFor(m=>m.FileDetails, new{@class="form-label"})
      </div>

      <div>
        @Html.EditorFor(m=> m.File, new{@class="form-control"})
      </div>
    </div>

    <button type="submit" class="btn btn-primary">Submit Image</button>
  }

</div>
